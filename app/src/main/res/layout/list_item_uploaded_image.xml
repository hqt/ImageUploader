<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/photo_image_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo_name_text_view"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/photo_image_view"
            android:layout_alignParentTop="true"
            android:text="Image Name"
            android:textStyle="bold"
            android:textSize="28sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/path_text_view"
            android:layout_toRightOf="@+id/photo_image_view"
            android:text="C:\Windows\System32\"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/photo_name_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_created_text_view"
            android:layout_toRightOf="@+id/photo_image_view"
            android:text="32/12/2012"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/path_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo_size_text_view"
            android:layout_toRightOf="@+id/photo_image_view"
            android:text="32 MB"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/date_created_text_view"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>